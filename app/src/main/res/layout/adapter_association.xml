<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="338dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Adap_Assoc_image"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_weight="4" />

        <TextView
            android:id="@+id/Adap_Assoc_Name"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_weight="4"
            android:text="My Name : "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Adap_Assoc_Phone"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_weight="3"
            android:text="text about the post " />

        <TextView
            android:id="@+id/Adap_Assoc_street"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_weight="3"
            android:text="street report "
            android:textColor="@color/blue_pastel"
            android:textStyle="" />
    </LinearLayout>

</RelativeLayout>