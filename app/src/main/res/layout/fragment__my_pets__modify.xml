<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_registrazione_user"
    tools:context=".UserPets.Fragment_MyPets_Modify">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="vertical"
        android:padding="32dp"
        android:background="@drawable/grey_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#286DC2"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/ET_MyPetModify_data"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:ems="10"
            android:background="@drawable/edittext_background"
            android:text=""
            android:hint="Date"
            android:inputType="textPersonName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color"
            android:layout_marginTop="15dp"
            android:textColor="#286DC2"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/ET_MyPetModify_mantello"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:ems="10"
            android:background="@drawable/edittext_background"
            android:text=""
            android:hint="Color"
            android:inputType="textPersonName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Race"
            android:layout_marginTop="15dp"
            android:textColor="#286DC2"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ET_MyPetModify_razza"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="#8e8e8e"
            android:textSize="18sp"
            android:ems="10"
            android:hint="Race"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distinguishing features"
            android:layout_marginTop="15dp"
            android:textColor="#286DC2"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/ET_MyPetModify_segPartic"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:ems="10"
            android:background="@drawable/edittext_background"
            android:text=""
            android:hint="Distinguishing features"
            android:inputType="textPersonName"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number chip"
            android:textColor="#286DC2"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/ET_MyPetModify_NumeroChip"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:ems="10"
            android:background="@drawable/edittext_background"
            android:text=""
            android:hint="Number chip"
            android:inputType="textPersonName"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date chip"
            android:textColor="#286DC2"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/ET_MyPetModify_DataChip"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:ems="10"
            android:background="@drawable/edittext_background"
            android:text=""
            android:hint="Date chip"
            android:inputType="textPersonName"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Animal"
            android:textColor="#286DC2"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <AutoCompleteTextView
            android:id="@+id/ET_MyPetModify_ResidAnimale"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:ems="10"
            android:background="@drawable/edittext_background"
            android:text=""
            android:hint="Description"
            android:inputType="textPersonName"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BT_Back_MyPetsModify"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Modify" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BT_Apply_MyPetsModify"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Eliminate" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>