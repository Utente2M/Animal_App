<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/show_profil_name"
        android:layout_width="260dp"
        android:layout_height="63dp"
        android:hint="name"
        android:text="Miao De Bau"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_userbasic_imageView_UserProfile"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/show_profil_uid"
        android:layout_width="260dp"
        android:layout_height="63dp"
        android:hint="uid"
        android:text="UID24242424"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_profil_mail"
        app:layout_constraintVertical_bias="0.077" />

    <TextView
        android:id="@+id/show_profil_mail"
        android:layout_width="260dp"
        android:layout_height="63dp"
        android:text="static_mail@gmail.com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_profil_name"
        app:layout_constraintVertical_bias="0.078" />

    <Button
        android:id="@+id/logout_profile"
        android:layout_width="82dp"
        android:layout_height="114dp"
        android:layout_marginTop="80dp"
        android:text="logout"
        app:layout_constraintTop_toBottomOf="@+id/show_profil_uid"
        tools:layout_editor_absoluteX="75dp" />

    <Button
        android:id="@+id/button_menu"
        android:layout_width="116dp"
        android:layout_height="108dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="551dp"
        android:drawableBottom="@drawable/hamburger_menu"
        android:text="second fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/frag_userbasic_imageView_UserProfile"
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="169dp"
        android:layout_marginBottom="544dp"
        android:background="#00B8D4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>