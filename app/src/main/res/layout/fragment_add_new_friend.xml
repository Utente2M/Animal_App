<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Friends.Fragment_addNewFriend">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="241dp"
            android:layout_height="54dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="20dp"
            android:text="Are you sure"
            android:textSize="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/Frag_addNewFriend_AddOrDelete"
            android:layout_width="241dp"
            android:layout_height="54dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="32dp"
            android:text="follow"
            android:textSize="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/Frag_addNewFriend_name_person"
            android:layout_width="241dp"
            android:layout_height="54dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="40dp"
            android:text="Name person"
            android:textSize="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Frag_addNewFriend_AddOrDelete" />

        <Button
            android:id="@+id/Frag_addNewFriend_BT_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Frag_addNewFriend_name_person"
            app:layout_constraintVertical_bias="0.228" />

        <Button
            android:id="@+id/Frag_addNewFriend_BT_Conferme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="192dp"
            android:text="conferme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"

            app:layout_constraintStart_toEndOf="@+id/Frag_addNewFriend_BT_Back"
            app:layout_constraintTop_toBottomOf="@+id/Frag_addNewFriend_name_person"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>