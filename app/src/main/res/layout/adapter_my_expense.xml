<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="65"
        android:weightSum="100">

        <ImageView
            android:id="@+id/image_Category_myExpense"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="50" />

        <TextView
            android:id="@+id/tV_ListV_myExpense_value"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="50"
            android:gravity="center"
            android:text="+100"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="35">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:weightSum="100">

            <TextView
                android:id="@+id/tV_ListV_myExpense_CategText"
                android:layout_width="154dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Text Categoria" />

            <TextView
                android:id="@+id/tV_ListV_myExpense_Data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="14/12/2022"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tV_ListV_myExpense_Descri"
            android:gravity="center"
            android:text="Taglio del pelo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
             />


        </LinearLayout>



</LinearLayout>